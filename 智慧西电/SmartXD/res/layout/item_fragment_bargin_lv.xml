<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_fragment_bargin_ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_bargin_tv_tag"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="#003d79"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <ImageView
        android:id="@+id/item_bargin_iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_pubtime"
            android:layout_width="wrap_content"
            android:layout_margin="8dp" 
            android:layout_height="wrap_content" />
        

        <TextView
            android:id="@+id/item_bargin_tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp" />

        <TextView
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_bargin_tv_sign_up"
            android:layout_toLeftOf="@+id/item_bargin_tv_sign_up"
            android:layout_toStartOf="@+id/item_bargin_tv_sign_up"
            android:text="报名人数" />
    </RelativeLayout>

</LinearLayout>