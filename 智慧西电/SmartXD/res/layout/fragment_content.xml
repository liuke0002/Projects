<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.liuke.zhbj.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/bottom_tab_home"
            style="@style/bottomTabStyle"
            android:checked="true"
            android:drawableTop="@drawable/selector_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/bottom_tab_news"
            style="@style/bottomTabStyle"
            android:drawableTop="@drawable/selector_news"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/bottom_tab_smart"
            style="@style/bottomTabStyle"
            android:drawableTop="@drawable/selector_smart"
            android:text="服务" />
        <RadioButton
            android:id="@+id/bottom_tab_gov"
            style="@style/bottomTabStyle"
            android:drawableTop="@drawable/selector_gov"
            android:text="约跑" />

        <RadioButton
            android:id="@+id/bottom_tab_setting"
            style="@style/bottomTabStyle"
            android:drawableTop="@drawable/selector_setting"
            android:text="我的" />
    </RadioGroup>

</LinearLayout>