<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:liuke="http://schemas.android.com/apk/rescom.liuke.mobilesafe"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <TextView
        style="@style/TitleStyle"
        android:text="进程管理设置" />
    
     <com.liuke.mobilesafe.view.SettingItemView
        android:id="@+id/siv_ShowSysProcesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:desc_off="显示系统进程已关闭"
        liuke:desc_on="显示系统进程已开启"
        liuke:title="显示系统进程设置" />
     <com.liuke.mobilesafe.view.SettingItemView
        android:id="@+id/siv_TimeToClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:desc_off="锁屏清理已关闭"
        liuke:desc_on="锁屏清理已开启"
        liuke:title="锁屏清理进程设置" />

    
</LinearLayout>