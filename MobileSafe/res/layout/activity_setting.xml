<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:liuke="http://schemas.android.com/apk/rescom.liuke.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.liuke.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:desc_off="自动更新已关闭"
        liuke:desc_on="自动更新已开启"
        liuke:title="自动更新设置" />
    <com.liuke.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:desc_off="归属地显示已经关闭"
        liuke:desc_on="归属地显示已经开启"
        liuke:title="电话归属地显示设置" />
    <com.liuke.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:title="归属地提示框风格设置" />
    <com.liuke.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:title="归属地提示框位置" />
     <com.liuke.mobilesafe.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:desc_off="黑名单功能已经关闭"
        liuke:desc_on="黑名单功能已经开启"
        liuke:title="黑名单功能设置" />
     <com.liuke.mobilesafe.view.SettingItemView
        android:id="@+id/siv_applock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        liuke:desc_off="程序锁已经关闭"
        liuke:desc_on="程序锁已经开启"
        liuke:title="程序锁功能设置" />

</LinearLayout>